{
  "name": "rx-sandbox",
  "version": "0.0.1",
  "description": "",
  "main": "",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "ci",
        "build"
      ],
      "autoFix": true
    }
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "lint-staged": {
    "*.@(ts)": [
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prepublish": "npm prune && npm run build",
    "precommit": "lint-staged",
    "prepush": "npm run build",
    "commitmsg": "validate-commit-msg",
    "test": "npm-run-all build:clean && mocha --reporter nyan --compilers ts:ts-node/register --recursive --bail spec",
    "test:cover": "nyc --reporter=lcov --reporter=html npm test",
    "lint": "tslint src/**/*.ts spec/**/*.ts",
    "lint:staged": "lint-staged",
    "build": "npm-run-all build:clean && tsc",
    "build:clean": "shx rm -rf ./dist",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/rx-sandbox.git"
  },
  "keywords": [
    "Rx",
    "RxJS",
    "ReactiveX",
    "ReactiveExtensions",
    "Streams",
    "Observables",
    "Observable",
    "Stream",
    "ES6",
    "ES2015"
  ],
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/rx-sandbox/issues"
  },
  "homepage": "https://github.com/kwonoj/rx-sandbox#readme",
  "devDependencies": {
    "chai": "3.5.0",
    "commitizen": "2.9.6",
    "conventional-changelog-cli": "1.3.1",
    "cz-conventional-changelog": "2.0.0",
    "husky": "0.13.3",
    "lint-staged": "3.4.1",
    "npm-run-all": "4.0.2",
    "nyc": "^10.3.0",
    "rxjs": "latest",
    "shx": "^0.2.2",
    "ts-node": "^3.0.3",
    "tslint": "5.2.0",
    "typescript": "^2.3.2",
    "validate-commit-msg": "2.12.1"
  },
  "peerDependencies": {
    "rxjs": "latest"
  }
}